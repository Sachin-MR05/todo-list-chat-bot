rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Rule for user profile documents
    match /users/{userId} {
      // Allow a user to CREATE their own document
      allow create: if request.auth.uid == userId;
      // Allow a user to READ or UPDATE their own document
      allow read, update: if request.auth.uid == userId;
    }

    // Rule for folder documents
    match /folders/{folderId} {
      // Allow creation if the user is authenticated and owns the new document
      allow create: if request.auth.uid == request.resource.data.userId;
      // Allow read, update, and delete if the user is authenticated and owns the existing document
      allow read, update, delete: if request.auth.uid == resource.data.userId;
    }

    // Rule for task documents
    match /tasks/{taskId} {
      // Allow creation if the user is authenticated and owns the new document
      allow create: if request.auth.uid == request.resource.data.userId;
      // Allow read, update, and delete if the user is authenticated and owns the existing document
      allow read, update, delete: if request.auth.uid == resource.data.userId;
    }

    // Rule for recurring task documents
    match /recurring_tasks/{recurringTaskId} {
        // Allow creation if the user is authenticated and the new document belongs to them
        allow create: if request.auth.uid == request.resource.data.userId;
        // Allow read, update, delete if the user is authenticated and owns the existing document
        allow read, update, delete: if request.auth.uid == resource.data.userId;
    }
  }
}
